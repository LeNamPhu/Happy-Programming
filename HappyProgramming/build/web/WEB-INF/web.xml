            <url-pattern>/LogOutController</url-pattern>
            </servlet-mapping>
            <servlet-mapping>
            <servlet-name>changeMentorStatus</servlet-name>
            <url-pattern>/changeMentorStatus</url-pattern>
        </servlet-mapping>
        <servlet-mapping>
            <servlet-name>searchMentor</servlet-name>
            <url-pattern>/searchMentor</url-pattern>
            
